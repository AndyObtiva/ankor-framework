<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false" scan="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--<logger name="at.irian.ankor.ref" level="DEBUG" />-->
    <!--<logger name="at.irian.ankor.big" level="DEBUG" />-->
    <!--<logger name="at.irian.ankor.fx" level="DEBUG" />-->
    <!--<logger name="at.irian.ankor.gateway" level="DEBUG" />-->
    <!--<logger name="at.irian.ankorsamples" level="DEBUG" />-->
    <!--<logger name="at.irian.ankor.akka" level="DEBUG" />-->

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>